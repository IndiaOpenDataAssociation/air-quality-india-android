<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AlertDialogGlobal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AlertDialogPrivate" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="login" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>

    <style name="TreeNodeStyleDivided">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>
    <!--Toolbar theme -->


    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle.Base">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>=]   </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="setting" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <!-- Spinner style -->
    <style name="match_wrap.Spinner.Et" parent="match_wrap">
        <item name="android:textSize">16.0dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/ll_rounded_white_box_spinner</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


    <style name="wrap_wrap.action.gray_oval_et" parent="@style/match_wrap">

        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/text_background</item>
        <item name="android:padding">@dimen/pading15</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="match_wrap.Text.Et" parent="">

        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/text_background</item>
        <item name="android:padding">@dimen/pading15</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue</item>
        <item name="colorControlActivated">@color/F0F3F4</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="match_wrap.Text.Et.Float" parent="">
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorAccent">@color/F0F3F4</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="wrap_wrap.action.blue_oval_et" parent="@style/match_wrap">
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/text_background_blue</item>
        <item name="android:padding">@dimen/pading15</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="btn_blue" parent="@style/match_wrap">
        <item name="android:background">@drawable/customborder</item>
        <item name="android:padding">@dimen/pading15</item>
        <item name="android:textSize">@dimen/txt_20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="match_wrap.small_txt" parent="@style/match_wrap">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/pad_5dp</item>
    </style>

    <style name="wrap_wrap.chkbox" parent="wrap_wrap">
        <item name="android:textColor">@color/hintColor</item>
    </style>

    <style name="wrap_wrap_tv_label_large" parent="match_wrap">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:padding">@dimen/pad_1dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="wrap_wrap_tv_label_medium" parent="wrap_wrap">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/pad_1dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="wrap_wrap.Gone" parent="wrap_wrap">
        <item name="android:visibility">gone</item>
    </style>

    <style name="match_wrap._tv_label_medium" parent="match_wrap">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/pad_1dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/txt_20sp</item>
    </style>

    <style name="wrap_wrap.small" parent="wrap_wrap">

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">#454444</item><!-- buttons OK cancel-->
        <item name="android:textColorPrimary">#00b3bf</item><!--text in message-->
        <item name="android:textColorSecondary">#454444</item>
        <item name="android:textColor">#454444</item>
        <item name="android:background">#FFFFFF</item> <!-- all bg-->
    </style>

</resources>
