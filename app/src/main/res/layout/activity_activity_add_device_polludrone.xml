<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:layout_weight="5"
    android:background="@android:color/white"
    tools:context="com.idn0phl3108ed43d22s30.android.air.com.idn0phl3108ed43d22s30.AdddeviceBreathiWifi">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/productHolder"
        style="@style/header"
        android:layout_below="@+id/toolBar"
        android:background="@color/blue"
        android:gravity="center"
        android:visibility="visible">

        <TextView

            android:id="@+id/tvbrathi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/txtPolludrone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_20sp" />

    </RelativeLayout>


    <LinearLayout
        style="@style/match_match"
        android:layout_below="@+id/productHolder"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        android:weightSum="12">

        <ImageView
            android:id="@+id/imgPolludrone"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="false"
            android:src="@drawable/polludrone_connect" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_weight="1" />

        <TextView
            style="@style/wrap_wrap_tv_label_large"
            android:layout_below="@+id/imgAirOwl"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txtChoseSerial" />

        <EditText
            android:id="@+id/etSerialPolludrone"
            style="@style/wrap_wrap.action.blue_oval_et"
            android:layout_weight=".5"
            android:hint="@string/hintserial"
            android:inputType="text" />

        <Button
            android:id="@+id/btnConnectPolludrone"
            style="@style/btn_blue"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginRight="@dimen/_45sdp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="@dimen/pading_appscreen"
            android:stateListAnimator="@null"
            android:text="@string/btnConnect" />

    </LinearLayout>


</RelativeLayout>
