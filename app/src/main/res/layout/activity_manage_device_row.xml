<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/pad_10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginBottom="@dimen/pad_5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/circleImg"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:paddingRight="@dimen/pad_5dp"
            android:src="@drawable/airowl_circle" />


        <TextView
            android:id="@+id/myDevicesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:drawableRight="@drawable/edit_on_white"
            android:paddingTop="@dimen/pad_8dp"
            android:singleLine="true"
            android:text="Front Garden  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#8C8C8C"
            android:typeface="sans" />
    </LinearLayout>

    <include
        layout="@layout/activity_divider"/>

</LinearLayout>



