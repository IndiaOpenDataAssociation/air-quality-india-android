<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relLayout"
        style="@style/match_match"
        android:gravity="center">

        <LinearLayout
            style="@style/match_wrap"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout style="@style/match_wrap">

                <TextView
                    style="@style/wrap_wrap_tv_label_large"
                    android:gravity="center"
                    android:text="@string/txtDevice"
                    android:textColor="@color/blue"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgAddDevice"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/add_device" />

                <ImageView
                    android:id="@+id/imgPurchase"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/purchase" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>